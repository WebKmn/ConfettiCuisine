<!DOCTYPE html>
<html>

<head>
    <title>Confetti Cuisine</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script type="text/javascript" src="/js/jquery.min.js"></script>
	<script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/confettiCuisine.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/confetti_cuisine.css">
</head>

<body>
    <div id="nav">
        <div class="col-sm nav-align">
            <h1>Confetti Cuisine</h1>
        </div>
        <div class="col-sm nav-align">
            <a href="/">
                <span class="button">Home</span>
            </a>
            <a href="/courses">
                <span class="button">Courses</span>
            </a>
            <a href="/subscribers">
                <span class="button">Subscribers</span>
            </a>
            <a href="/users">
                <span class="button">Users</span>
            </a>
            <%- include('courses/_coursesModal') %>
        </div>

        <div class="login">
			<% if (loggedIn) { %>
			<div class="logged-in">
				Logged in as <a href="<%=`/users/${currentUser._id}`%>">
					<%= currentUser.fullName %></a>
			</div>
			<div class="log-out">
				<a href="/users/logout">Log out</a>
			</div>
			<%} else {%>
			<div class="log-in">
				<a href="/users/login">Log In</a>
			</div>
			<% } %>
		</div>
    </div>

    <div class="flashes">
        <% if (flashMessages) { %>
            <% if (flashMessages.success) { %>
                <div class="flash success">
                    <%= flashMessages.success %>
                </div>
           <% } else if (flashMessages.error) { %>
                <div class="flash error" > 
                    <%= flashMessages.error %>
                </div>
          <% } %>
       <% } %>
    </div>

    <div class="container"> 
        <%- body %>
    </div>
</body>

</html>