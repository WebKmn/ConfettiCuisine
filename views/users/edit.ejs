<div class="form-data">
    <form class="form-signin" action="<%= `/users/${user._id}/update?_method=PUT`%>" method="POST">
        <h2 class="form-signin-heading">Edit User: </h2>
        <br>
        <label for="txtFirstName">First Name: </label>
        <input class="form-control" type="text" name="first" id="txtFirstName" value="<%= user.name.first %>" autofocus required>
        <br>
        <label for="txtLastName">First Name: </label>
        <input class="form-control" type="text" name="last" id="txtLastName" value="<%= user.name.last %>" required>
        <br>
        <label for="txtEmail">Email: </label>
        <input class="form-control" type="email" name="email" id="txtEmail" value="<%= user.email %>" required>
        <br>
        <label for="txtPassword">Password: </label>
        <input class="form-control" type="password" name="password" id="txtPassword" value="<%= user.password %>" required>
        <br>
        <label for="txtZipCode">zipCode: </label>
        <input class="form-control" type="text" name="zipCode" id="txtZipCode" pattern="\d*" value="<%= user.zipCode %>"required>
        <br>
        <button class="btn btn-lg btn-block button" type="submit">Edit</button>
    </form>
</div>